{
  "name": "haiku-commit",
  "displayName": "Haiku Commit Messages",
  "description": "Generate beautiful haiku commit messages using AI",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "keywords": [
    "git",
    "commit",
    "haiku",
    "ai",
    "poetry"
  ],
  "activationEvents": [
    "onCommand:haiku-commit.generate"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "haiku-commit.generate",
        "title": "Generate Haiku Commit Message",
        "category": "Haiku Commit",
        "icon": "$(edit)"
      },
      {
        "command": "haiku-commit.setApiKey",
        "title": "Set Haiku API Key",
        "category": "Haiku Commit",
        "icon": "$(key)"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "haiku-commit.generate",
          "group": "navigation",
          "when": "scmProvider == git"
        },
        {
          "command": "haiku-commit.setApiKey",
          "group": "navigation@1",
          "when": "scmProvider == git && config.haikuCommit.anthropicApiKey == ''"
        }
      ]
    },
    "configuration": {
      "title": "Haiku Commit",
      "properties": {
        "haikuCommit.anthropicApiKey": {
          "type": "string",
          "default": "",
          "description": "Your Anthropic API key for generating haiku commit messages",
          "markdownDescription": "Get your API key from [Anthropic Console](https://console.anthropic.com/)"
        },
        "haikuCommit.strict575": {
          "type": "boolean",
          "default": true,
          "description": "Enforce exact 5-7-5 syllable counts for the haiku"
        },
        "haikuCommit.maxDiffLength": {
          "type": "number",
          "default": 4000,
          "minimum": 500,
          "description": "Maximum characters of the staged diff to send to the AI"
        },
        "haikuCommit.samples": {
          "type": "number",
          "default": 1,
          "minimum": 1,
          "maximum": 5,
          "description": "Number of haiku options to generate and choose from"
        }
      }
    },
    "keybindings": [
      {
        "command": "haiku-commit.generate",
        "key": "ctrl+shift+h",
        "mac": "cmd+shift+h",
        "when": "scmProvider == git"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "dev": "pnpm run watch",
    "package": "vsce package",
    "pretest": "pnpm run compile",
    "lint": "echo 'Linting skipped'"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^20.0.0",
    "@vscode/vsce": "^3.0.0",
    "typescript": "^5.1.0"
  },
  "dependencies": {
    "syllable": "^5.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/haiku-commit.git"
  },
  "publisher": "yourpublisher",
  "license": "MIT"
}
